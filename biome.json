{
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noAssignInExpressions": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "warn",
        "noParameterAssign": "off"
      },
      "complexity": {
        "noBannedTypes": "warn",
        "noUselessCatch": "warn",
        "noForEach": "off",
        "noStaticOnlyClass": "off"
      },
      "a11y": {
        "useValidAnchor": "warn"
      }
    }
  }
}
